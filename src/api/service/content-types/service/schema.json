{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Company services"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "tags": {
      "type": "json",
      "required": true
    },
    "gradientFrom": {
      "type": "string",
      "required": true,
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "description": "Starting color for gradient (hex format)"
    },
    "gradientTo": {
      "type": "string",
      "required": true,
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "description": "Ending color for gradient (hex format)"
    },
    "icon": {
      "type": "string",
      "required": true,
      "description": "Icon component name or identifier"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "meta_title": {
      "type": "string"
    },
    "meta_description": {
      "type": "text"
    }
  }
}